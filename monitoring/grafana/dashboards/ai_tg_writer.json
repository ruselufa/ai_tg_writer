{
  "id": null,
  "title": "AI TG Writer Monitoring",
  "tags": ["ai", "telegram", "bot"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "HTTP Requests Rate",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(http_requests_total[5m])",
          "legendFormat": "{{method}} {{endpoint}}",
          "refId": "A"
        }
      ],
      "yAxes": [
        {
          "label": "requests/sec"
        }
      ]
    },
    {
      "id": 2,
      "title": "Voice Messages Processed",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(voice_messages_processed_total[5m])",
          "legendFormat": "{{status}} ({{user_tariff}})",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "Active Users",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "active_users_total",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Voice Processing Duration",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 12
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(voice_processing_duration_seconds_bucket[5m]))",
          "legendFormat": "95th percentile",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, rate(voice_processing_duration_seconds_bucket[5m]))",
          "legendFormat": "50th percentile",
          "refId": "B"
        }
      ]
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s"
}

